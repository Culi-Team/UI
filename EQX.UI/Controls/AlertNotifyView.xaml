<Window x:Class="EQX.UI.Controls.AlertNotifyView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:EQX.UI.Controls"
        xmlns:core="clr-namespace:EQX.Core.Common;assembly=EQX.Core"
        xmlns:cvt="clr-namespace:EQX.UI.Converters"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        MouseDown="Window_MouseDown"
        mc:Ignorable="d"
        Background="Yellow"
        d:DataContext="{d:DesignInstance Type=local:AlertNotifyView}"
        Height="600"
        Width="900">

    <Window.Resources>
        <cvt:BooleanToAlertColorConverter x:Key="BooleanToAlertColorConverter" />

        <Style TargetType="Border">
            <Setter Property="BorderBrush"
                    Value="Gray" />
            <Setter Property="BorderThickness"
                    Value="1" />
            <Setter Property="Margin"
                    Value="1" />
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="TextAlignment"
                    Value="Center" />
            <Setter Property="VerticalAlignment"
                    Value="Center" />
            <Setter Property="Foreground"
                    Value="{Binding IsWarning, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource BooleanToAlertColorConverter}}" />
            <Setter Property="FontWeight"
                    Value="Bold" />
            <Setter Property="FontSize"
                    Value="20" />
        </Style>
    </Window.Resources>
    <DockPanel>
        <Border DockPanel.Dock="Top"
                Height="5"
                Background="{Binding IsWarning, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource BooleanToAlertColorConverter}}" />
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="8*" />
                <RowDefinition Height="2.5*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Border Grid.Row="0"
                    Grid.Column="0">
                <TextBlock>
                    <TextBlock.Text>
                        <MultiBinding StringFormat="{}[{0}] {1}">
                            <Binding Path="AlertModel.Id" />
                            <Binding Path="AlertModel.Message" />
                        </MultiBinding>
                    </TextBlock.Text>
                </TextBlock>
            </Border>
            <Border Grid.Row="0"
                    Grid.Column="1">
                <TextBlock Text="{DynamicResource str_Detail}" />
            </Border>
            <StackPanel Grid.Row="1"
                        Grid.ColumnSpan="2"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="10,5">
                <TextBlock Text="Language"
                           VerticalAlignment="Center"
                           Margin="0,0,8,0" />
                <ComboBox Width="160"
                          ItemsSource="{Binding AvailableLanguages}"
                          SelectedItem="{Binding SelectedLanguage, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>
            <Border Grid.Row="2">
                <Canvas Grid.Row="1">
                    <Image Width="{Binding Path=ActualWidth, RelativeSource={RelativeSource AncestorType=Canvas}}"
                           Height="{Binding Path=ActualHeight, RelativeSource={RelativeSource AncestorType=Canvas}}"
                           Source="{Binding AlertModel.AlertOverviewSource}"
                           Stretch="Uniform" />
                    <ItemsControl ItemsSource="{Binding AlertModel.AlertOverviewShapes}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <Canvas />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate DataType="{x:Type core:AlertShapeModel}">
                                <Grid>
                                    <Border x:Name="RectShape"
                                            BorderBrush="{Binding IsWarning, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource BooleanToAlertColorConverter}}"
                                            BorderThickness="{Binding StrokeThickness}"
                                            Canvas.Left="{Binding CanvasLeft}"
                                            Canvas.Top="{Binding CanvasTop}"
                                            Width="{Binding CanvasWidth}"
                                            Height="{Binding CanvasHeight}"
                                            RenderTransformOrigin="0.5,0.5"
                                            Visibility="Collapsed">
                                        <Border.RenderTransform>
                                            <RotateTransform Angle="{Binding RotationDegrees}" />
                                        </Border.RenderTransform>
                                    </Border>
                                    <Ellipse x:Name="CircleShape"
                                             StrokeThickness="{Binding StrokeThickness}"
                                             Stroke="{Binding IsWarning, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource BooleanToAlertColorConverter}}"
                                             Canvas.Left="{Binding CanvasLeft}"
                                             Canvas.Top="{Binding CanvasTop}"
                                             Width="{Binding CanvasWidth}"
                                             Height="{Binding CanvasHeight}"
                                             RenderTransformOrigin="0.5,0.5"
                                             Visibility="Collapsed">
                                        <Ellipse.RenderTransform>
                                            <RotateTransform Angle="{Binding RotationDegrees}" />
                                        </Ellipse.RenderTransform>
                                    </Ellipse>
                                </Grid>
                                <DataTemplate.Triggers>
                                    <DataTrigger Binding="{Binding Type}"
                                                 Value="Rectangle">
                                        <Setter TargetName="RectShape"
                                                Property="Visibility"
                                                Value="Visible" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding Type}"
                                                 Value="Circle">
                                        <Setter TargetName="CircleShape"
                                                Property="Visibility"
                                                Value="Visible" />
                                    </DataTrigger>
                                </DataTemplate.Triggers>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Canvas>
            </Border>
            <Border Grid.Row="2"
                    Grid.Column="1">
                <Canvas Grid.Row="1">
                    <Image Width="{Binding Path=ActualWidth, RelativeSource={RelativeSource AncestorType=Canvas}}"
                           Height="{Binding Path=ActualHeight, RelativeSource={RelativeSource AncestorType=Canvas}}"
                           Source="{Binding AlertModel.AlertDetailviewSource}"
                           Stretch="Uniform" />
                    <ItemsControl ItemsSource="{Binding AlertModel.AlertDetailviewShapes}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <Canvas />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate DataType="{x:Type core:AlertShapeModel}">
                                <Grid>
                                    <Border x:Name="RectShape"
                                            BorderBrush="{Binding IsWarning, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource BooleanToAlertColorConverter}}"
                                            BorderThickness="{Binding StrokeThickness}"
                                            Canvas.Left="{Binding CanvasLeft}"
                                            Canvas.Top="{Binding CanvasTop}"
                                            Width="{Binding CanvasWidth}"
                                            Height="{Binding CanvasHeight}"
                                            RenderTransformOrigin="0.5,0.5"
                                            Visibility="Collapsed">
                                        <Border.RenderTransform>
                                            <RotateTransform Angle="{Binding RotationDegrees}" />
                                        </Border.RenderTransform>
                                    </Border>
                                    <Ellipse x:Name="CircleShape"
                                             StrokeThickness="{Binding StrokeThickness}"
                                             Stroke="{Binding IsWarning, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource BooleanToAlertColorConverter}}"
                                             Canvas.Left="{Binding CanvasLeft}"
                                             Canvas.Top="{Binding CanvasTop}"
                                             Width="{Binding CanvasWidth}"
                                             Height="{Binding CanvasHeight}"
                                             RenderTransformOrigin="0.5,0.5"
                                             Visibility="Collapsed">
                                        <Ellipse.RenderTransform>
                                            <RotateTransform Angle="{Binding RotationDegrees}" />
                                        </Ellipse.RenderTransform>
                                    </Ellipse>
                                </Grid>
                                <DataTemplate.Triggers>
                                    <DataTrigger Binding="{Binding Type}"
                                                 Value="Rectangle">
                                        <Setter TargetName="RectShape"
                                                Property="Visibility"
                                                Value="Visible" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding Type}"
                                                 Value="Circle">
                                        <Setter TargetName="CircleShape"
                                                Property="Visibility"
                                                Value="Visible" />
                                    </DataTrigger>
                                </DataTemplate.Triggers>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Canvas>
            </Border>
            <Border Grid.Row="3"
                    Grid.ColumnSpan="2">
                <ItemsControl AlternationCount="10"
                              ItemsSource="{Binding AlertModel.TroubleshootingSteps}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock>
                                <TextBlock.Style>
                                    <Style BasedOn="{StaticResource {x:Type TextBlock}}"
                                           TargetType="{x:Type TextBlock}">
                                        <Setter Property="HorizontalAlignment"
                                                Value="Left" />
                                    </Style>
                                </TextBlock.Style>
                                <TextBlock.Text>
                                    <MultiBinding StringFormat="{}{0}. {1}">
                                        <Binding Path="(ItemsControl.AlternationIndex)"
                                                 RelativeSource="{RelativeSource TemplatedParent}" />
                                        <Binding Path="." />
                                    </MultiBinding>
                                </TextBlock.Text>
                            </TextBlock>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel VerticalAlignment="Center"
                                        Margin="100 0"
                                        HorizontalAlignment="Left" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                </ItemsControl>
            </Border>
            <local:ImageButton Content="CANCEL"
                               Grid.Row="4"
                               Margin="0 5"
                               Padding="5 10"
                               Grid.ColumnSpan="2"
                               Click="CancelButton_Click"
                               Width="140"
                               DisabledImage="{StaticResource image_cancel_normal_light}"
                               Image="{StaticResource image_cancel_selected}" />
        </Grid>
    </DockPanel>
</Window>
