<UserControl x:Class="EQX.UI.Controls.VacuumView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EQX.UI.Controls"
             xmlns:inout="clr-namespace:EQX.InOut;assembly=EQX.InOut"
             d:DataContext="{d:DesignInstance Type={x:Type inout:VacuumBase}}"
             xmlns:cvt="clr-namespace:EQX.UI.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="120" d:DesignWidth="300">
    <UserControl.Resources>
        <cvt:BooleanToOnOffBrushConverter x:Key="BooleanToOnOffBrushConverter"/>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <Style x:Key="VacuumActionButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="110" />
            <Setter Property="Height" Value="36" />
        </Style>
        <Style x:Key="BlowButtonStyle" TargetType="Button" BasedOn="{StaticResource VacuumActionButtonStyle}">
            <Setter Property="Content" Value="Blow" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding HasBlow}" Value="False">
                    <Setter Property="Content" Value="Off" />
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Border BorderBrush="{StaticResource PrimaryBorderBrush}" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="35"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border
                Grid.Row="0"
                Background="{StaticResource HighLightBackgroundColor}">
                <TextBlock
                    Margin="3 0"
                    FontWeight="Bold"
                    VerticalAlignment="Center"
                    TextAlignment="Center"
                    TextWrapping="Wrap">
                    <TextBlock.Text>
                        <MultiBinding StringFormat="{}[{0}] {1}">
                            <Binding Path="Id"/>
                            <Binding Path="Name"/>
                        </MultiBinding>
                    </TextBlock.Text>
                </TextBlock>
            </Border>

            <Grid Grid.Row="1" Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" HorizontalAlignment="Center" Width="120">
                    <Button Style="{StaticResource VacuumActionButtonStyle}" Width="120" Height="30" Content="Vacuum"
                            Click="VacuumButton_Click" />
                    <Border Height="10" BorderBrush="{StaticResource PrimaryBorderBrush}" BorderThickness="1"
                            Background="{Binding IsVacuumDetected, Converter={StaticResource BooleanToOnOffBrushConverter}}"
                            Visibility="{Binding HasVacuumDetect, Converter={StaticResource BooleanToVisibilityConverter}}" />
                    <TextBlock TextAlignment="Center" FontWeight="SemiBold">
                        <Run Text="Reach:" />
                        <Run Text=" " />
                        <Run Text="{Binding LastVacuumDetectDurationText, Mode=OneWay}" />
                    </TextBlock>
                </StackPanel>

                <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                    <Button Style="{StaticResource BlowButtonStyle}" Click="BlowButton_Click" Height="30" Width="120" />
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</UserControl>
