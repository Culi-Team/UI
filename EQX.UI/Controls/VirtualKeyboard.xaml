<Window x:Class="EQX.UI.Controls.VirtualKeyboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EQX.UI.Controls"
        mc:Ignorable="d"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        Title="VirtualKeyboard" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="10*"/>
        </Grid.RowDefinitions>
        <PasswordBox VerticalContentAlignment="Center"
                     HorizontalContentAlignment="Center"
                     Name="passwordBox"
                     Height="40">
            <PasswordBox.Style>
                <Style TargetType="{x:Type PasswordBox}">
                    <Style.Setters>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate>
                                    <Border BorderBrush="{StaticResource PrimaryBorderBrush}"
                                            BorderThickness="1"
                                            CornerRadius="5"
                                            Background="{TemplateBinding Background}">
                                        <Grid>
                                            <ScrollViewer x:Name="PART_ContentHost"
                                                          HorizontalScrollBarVisibility="Hidden"
                                                          VerticalScrollBarVisibility="Hidden" />
                                        </Grid>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style.Setters>
                </Style>
            </PasswordBox.Style>
        </PasswordBox>

        <Border Background="#f0f0f0"
                Grid.Row="1"
                CornerRadius="10"
                BorderBrush="#cccccc"
                BorderThickness="1">
            <Grid Margin="10">
                <Grid.Resources>
                    <Style TargetType="Button"
                           x:Key="KeyboardButton">
                        <Setter Property="Background"
                                Value="White" />
                        <Setter Property="Foreground"
                                Value="Black" />
                        <Setter Property="BorderBrush"
                                Value="#cccccc" />
                        <Setter Property="BorderThickness"
                                Value="1" />
                        <Setter Property="FontSize"
                                Value="14" />
                        <Setter Property="Margin"
                                Value="2" />
                        <Setter Property="FontWeight"
                                Value="Normal" />
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="{TemplateBinding BorderThickness}"
                                            CornerRadius="5">
                                        <ContentPresenter HorizontalAlignment="Center"
                                                          VerticalAlignment="Center" />
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver"
                                     Value="True">
                                <Setter Property="Background"
                                        Value="#e0e0e0" />
                            </Trigger>
                            <Trigger Property="IsPressed"
                                     Value="True">
                                <Setter Property="Background"
                                        Value="#cce4f7" />
                                <Setter Property="BorderBrush"
                                        Value="#0078d7" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Grid.Resources>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="1.5*" />
                        <ColumnDefinition Width="0.5*" />
                    </Grid.ColumnDefinitions>

                    <Button Grid.Row="0"
                            Grid.Column="0"
                            Content="`"
                            Style="{StaticResource KeyboardButton}"
                            Click="Button_Click" />
                    <Button Grid.Row="0"
                            Grid.Column="1"
                            Content="1"
                            Style="{StaticResource KeyboardButton}"
                            Click="Button_Click" />
                    <Button Grid.Row="0"
                            Grid.Column="2"
                            Content="2"
                            Style="{StaticResource KeyboardButton}"
                            Click="Button_Click" />
                    <Button Grid.Row="0"
                            Grid.Column="3"
                            Content="3"
                            Style="{StaticResource KeyboardButton}"
                            Click="Button_Click" />
                    <Button Grid.Row="0"
                            Grid.Column="4"
                            Content="4"
                            Style="{StaticResource KeyboardButton}"
                            Click="Button_Click" />
                    <Button Grid.Row="0"
                            Grid.Column="5"
                            Content="5"
                            Style="{StaticResource KeyboardButton}"
                            Click="Button_Click" />
                    <Button Grid.Row="0"
                            Grid.Column="6"
                            Content="6"
                            Style="{StaticResource KeyboardButton}"
                            Click="Button_Click" />
                    <Button Grid.Row="0"
                            Grid.Column="7"
                            Content="7"
                            Style="{StaticResource KeyboardButton}"
                            Click="Button_Click" />
                    <Button Grid.Row="0"
                            Grid.Column="8"
                            Content="8"
                            Style="{StaticResource KeyboardButton}"
                            Click="Button_Click" />
                    <Button Grid.Row="0"
                            Grid.Column="9"
                            Content="9"
                            Style="{StaticResource KeyboardButton}"
                            Click="Button_Click" />
                    <Button Grid.Row="0"
                            Grid.Column="10"
                            Content="0"
                            Style="{StaticResource KeyboardButton}"
                            Click="Button_Click" />
                    <Button Grid.Row="0"
                            Grid.Column="11"
                            Content="-"
                            Style="{StaticResource KeyboardButton}"
                            Click="Button_Click" />
                    <Button Grid.Row="0"
                            Grid.Column="12"
                            Content="="
                            Style="{StaticResource KeyboardButton}"
                            Click="Button_Click" />
                    <Button Grid.Row="0"
                            Grid.Column="13"
                            Grid.ColumnSpan="2"
                            Content="Backspace"
                            Style="{StaticResource KeyboardButton}"
                            Click="BackspaceButton_Click"/>

                    <Button Grid.Row="1"
                            Grid.Column="0"
                            Grid.ColumnSpan="2"
                            Content="Tab"
                            Style="{StaticResource KeyboardButton}"/>
                    <Button Grid.Row="1"
                            Grid.Column="2"
                            Content="Q"
                            Style="{StaticResource KeyboardButton}"
                            Click="Button_Click" />
                    <Button Grid.Row="1"
                            Grid.Column="3"
                            Content="W"
                            Style="{StaticResource KeyboardButton}"
                            Click="Button_Click" />
                    <Button Grid.Row="1"
                            Grid.Column="4"
                            Content="E"
                            Style="{StaticResource KeyboardButton}"
                            Click="Button_Click" />
                    <Button Grid.Row="1"
                            Grid.Column="5"
                            Content="R"
                            Style="{StaticResource KeyboardButton}"
                            Click="Button_Click" />
                    <Button Grid.Row="1"
                            Grid.Column="6"
                            Content="T"
                            Style="{StaticResource KeyboardButton}"
                            Click="Button_Click" />
                    <Button Grid.Row="1"
                            Grid.Column="7"
                            Content="Y"
                            Style="{StaticResource KeyboardButton}"
                            Click="Button_Click" />
                    <Button Grid.Row="1"
                            Grid.Column="8"
                            Content="U"
                            Style="{StaticResource KeyboardButton}"
                            Click="Button_Click" />
                    <Button Grid.Row="1"
                            Grid.Column="9"
                            Content="I"
                            Style="{StaticResource KeyboardButton}"
                            Click="Button_Click" />
                    <Button Grid.Row="1"
                            Grid.Column="10"
                            Content="O"
                            Style="{StaticResource KeyboardButton}"
                            Click="Button_Click" />
                    <Button Grid.Row="1"
                            Grid.Column="11"
                            Content="P"
                            Style="{StaticResource KeyboardButton}"
                            Click="Button_Click" />
                    <Button Grid.Row="1"
                            Grid.Column="12"
                            Content="["
                            Style="{StaticResource KeyboardButton}"
                            Click="Button_Click" />
                    <Button Grid.Row="1"
                            Grid.Column="13"
                            Content="]"
                            Style="{StaticResource KeyboardButton}"
                            Click="Button_Click" />
                    <Button Grid.Row="1"
                            Grid.Column="14"
                            Content="\"
                            Style="{StaticResource KeyboardButton}"
                            Click="Button_Click" />

                    <Button Grid.Row="2"
                            Grid.Column="0"
                            Grid.ColumnSpan="2"
                            Content="Caps Lock"
                            Style="{StaticResource KeyboardButton}"/>
                    <Button Grid.Row="2"
                            Grid.Column="2"
                            Content="A"
                            Style="{StaticResource KeyboardButton}"
                            Click="Button_Click" />
                    <Button Grid.Row="2"
                            Grid.Column="3"
                            Content="S"
                            Style="{StaticResource KeyboardButton}"
                            Click="Button_Click" />
                    <Button Grid.Row="2"
                            Grid.Column="4"
                            Content="D"
                            Style="{StaticResource KeyboardButton}"
                            Click="Button_Click" />
                    <Button Grid.Row="2"
                            Grid.Column="5"
                            Content="F"
                            Style="{StaticResource KeyboardButton}"
                            Click="Button_Click" />
                    <Button Grid.Row="2"
                            Grid.Column="6"
                            Content="G"
                            Style="{StaticResource KeyboardButton}"
                            Click="Button_Click" />
                    <Button Grid.Row="2"
                            Grid.Column="7"
                            Content="H"
                            Style="{StaticResource KeyboardButton}"
                            Click="Button_Click" />
                    <Button Grid.Row="2"
                            Grid.Column="8"
                            Content="J"
                            Style="{StaticResource KeyboardButton}"
                            Click="Button_Click" />
                    <Button Grid.Row="2"
                            Grid.Column="9"
                            Content="K"
                            Style="{StaticResource KeyboardButton}"
                            Click="Button_Click" />
                    <Button Grid.Row="2"
                            Grid.Column="10"
                            Content="L"
                            Style="{StaticResource KeyboardButton}"
                            Click="Button_Click" />
                    <Button Grid.Row="2"
                            Grid.Column="11"
                            Content=";"
                            Style="{StaticResource KeyboardButton}"
                            Click="Button_Click" />
                    <Button Grid.Row="2"
                            Grid.Column="12"
                            Content="'"
                            Style="{StaticResource KeyboardButton}"
                            Click="Button_Click" />
                    <Button Grid.Row="2"
                            Grid.Column="13"
                            Grid.ColumnSpan="2"
                            Content="Enter"
                            Style="{StaticResource KeyboardButton}"
                            Click="EnterButton_Click"/>

                    <Button Grid.Row="3"
                            Grid.Column="0"
                            Grid.ColumnSpan="2"
                            Content="Shift"
                            Style="{StaticResource KeyboardButton}"
                            Click="Button_Click" />
                    <Button Grid.Row="3"
                            Grid.Column="2"
                            Content="Z"
                            Style="{StaticResource KeyboardButton}"
                            Click="Button_Click" />
                    <Button Grid.Row="3"
                            Grid.Column="3"
                            Content="X"
                            Style="{StaticResource KeyboardButton}"
                            Click="Button_Click" />
                    <Button Grid.Row="3"
                            Grid.Column="4"
                            Content="C"
                            Style="{StaticResource KeyboardButton}"
                            Click="Button_Click" />
                    <Button Grid.Row="3"
                            Grid.Column="5"
                            Content="V"
                            Style="{StaticResource KeyboardButton}"
                            Click="Button_Click" />
                    <Button Grid.Row="3"
                            Grid.Column="6"
                            Content="B"
                            Style="{StaticResource KeyboardButton}"
                            Click="Button_Click" />
                    <Button Grid.Row="3"
                            Grid.Column="7"
                            Content="N"
                            Style="{StaticResource KeyboardButton}"
                            Click="Button_Click" />
                    <Button Grid.Row="3"
                            Grid.Column="8"
                            Content="M"
                            Style="{StaticResource KeyboardButton}"
                            Click="Button_Click" />
                    <Button Grid.Row="3"
                            Grid.Column="9"
                            Content=","
                            Style="{StaticResource KeyboardButton}"
                            Click="Button_Click" />
                    <Button Grid.Row="3"
                            Grid.Column="10"
                            Content="."
                            Style="{StaticResource KeyboardButton}"
                            Click="Button_Click" />
                    <Button Grid.Row="3"
                            Grid.Column="11"
                            Content="/"
                            Style="{StaticResource KeyboardButton}"
                            Click="Button_Click" />
                    <Button Grid.Row="3"
                            Grid.Column="12"
                            Grid.ColumnSpan="3"
                            Content="Shift"
                            Style="{StaticResource KeyboardButton}"/>

                    <Button Grid.Row="4"
                            Grid.Column="0"
                            Content="Ctrl"
                            Style="{StaticResource KeyboardButton}"/>
                    <Button Grid.Row="4"
                            Grid.Column="1"
                            Content="Win"
                            Style="{StaticResource KeyboardButton}"/>
                    <Button Grid.Row="4"
                            Grid.Column="2"
                            Content="Alt"
                            Style="{StaticResource KeyboardButton}"/>
                    <Button Grid.Row="4"
                            Grid.Column="3"
                            Grid.ColumnSpan="6"
                            Content="Space"
                            Style="{StaticResource KeyboardButton}"/>
                    <Button Grid.Row="4"
                            Grid.Column="9"
                            Content="Alt"
                            Style="{StaticResource KeyboardButton}"/>
                    <Button Grid.Row="4"
                            Grid.Column="10"
                            Content="Ctrl"
                            Style="{StaticResource KeyboardButton}"/>
                    <Button Grid.Row="4"
                            Grid.Column="11"
                            Grid.ColumnSpan="2"
                            Content="Close"
                            Click="CloseButton_Click"
                            Style="{StaticResource KeyboardButton}"
                            Foreground="#d13438" />
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>
